{
  "name": "ple",
  "description": "Streamlined PList Editor.",
  "version": "1.0.0",
  "author": "Yasuaki Uechi <y@uechi.io> (https://uechi.io)",
  "scripts": {
    "build": "run-s clean 'build:ts --minify --dts'",
    "build:ts": "tsup src/cli.ts src/index.ts -d dist",
    "clean": "shx rm -rf dist",
    "dev": "npm run build:ts -- --watch",
    "prepublishOnly": "npm run build",
    "test": "npm run build:ts && jest"
  },
  "dependencies": {
    "cac": "^6.6.1",
    "deepmerge": "^4.2.2",
    "epicfail": "^1.0.0",
    "plist": "^3.0.1"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "^1.1.4",
    "@types/jest": "^26.0.8",
    "@types/node": "^14.0.27",
    "@types/plist": "^3.0.2",
    "execa": "^4.0.3",
    "jest": "^26.2.2",
    "npm-run-all": "^4.1.5",
    "release-it": "^13.6.6",
    "shx": "^0.3.2",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tsup": "^3.4.2",
    "typescript": "^3.9.7"
  },
  "types": "dist/index.d.ts",
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/uetchy/ple.git"
  },
  "bugs": {
    "url": "https://github.com/uetchy/ple/issues"
  },
  "homepage": "https://github.com/uetchy/ple",
  "keywords": [
    "editor",
    "plist",
    "property-list"
  ],
  "license": "Apache-2.0"
}
